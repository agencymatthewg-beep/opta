<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Hardened Runtime: Required for notarization -->
    <key>com.apple.security.cs.allow-jit</key>
    <true/>

    <!-- Allow unsigned executable memory (required for WebView/JavaScript) -->
    <key>com.apple.security.cs.allow-unsigned-executable-memory</key>
    <true/>

    <!-- Disable library validation (allows loading Tauri plugins) -->
    <key>com.apple.security.cs.disable-library-validation</key>
    <true/>

    <!-- Network: Outbound connections (for AI API calls) -->
    <key>com.apple.security.network.client</key>
    <true/>

    <!-- File access: User-selected files (for game detection, profiles) -->
    <key>com.apple.security.files.user-selected.read-write</key>
    <true/>

    <!-- File access: Downloads folder (for saving reports, exports) -->
    <key>com.apple.security.files.downloads.read-write</key>
    <true/>

    <!-- Automation: Allow AppleScript/Accessibility (for system optimization) -->
    <key>com.apple.security.automation.apple-events</key>
    <true/>

    <!-- Hardware: GPU access (for telemetry and monitoring) -->
    <key>com.apple.security.device.graphics</key>
    <true/>
</dict>
</plist>
