{
  "$schema": "https://claude.ai/schemas/commands-v1.json",
  "version": "1.0",
  "description": "Opta MacOS project-specific commands",
  "commands": {
    "/dev": {
      "description": "Start Tauri dev server",
      "type": "bash",
      "action": "npm run dev",
      "background": true,
      "workingDirectory": "."
    },
    "/build": {
      "description": "Build macOS .dmg installer",
      "type": "bash",
      "action": "npm run build:dmg",
      "confirmation": true,
      "confirmMessage": "Build production .dmg? (takes ~5 min)",
      "workingDirectory": "."
    },
    "/build:app": {
      "description": "Build .app bundle only (faster)",
      "type": "bash",
      "action": "npm run build:app",
      "workingDirectory": "."
    },
    "/test": {
      "description": "Run frontend tests",
      "type": "bash",
      "action": "npm test",
      "workingDirectory": "."
    },
    "/lint": {
      "description": "Lint and auto-fix code",
      "type": "bash",
      "action": "npm run lint -- --fix",
      "workingDirectory": "."
    },
    "/clean": {
      "description": "Clean build artifacts",
      "type": "bash",
      "action": "rm -rf dist/ src-tauri/target/ node_modules/.cache/ && echo 'âœ… Cleaned build artifacts'",
      "workingDirectory": "."
    },
    "/ring": {
      "description": "Show Opta Ring animation spec",
      "type": "tool",
      "action": "Read",
      "params": {
        "file_path": ".claude/skills/opta-ring-animation.md"
      }
    },
    "/mcp": {
      "description": "Check MCP server status",
      "type": "bash",
      "action": "cd mcp-server && uv run python -c 'from opta_mcp.telemetry import get_system_snapshot; print(get_system_snapshot())'"
    },
    "/versions": {
      "description": "Show version info for all dependencies",
      "type": "bash",
      "action": "./scripts/run-version.sh",
      "workingDirectory": "."
    }
  },
  "aliases": {
    "/b": "/build",
    "/l": "/lint",
    "/t": "/test",
    "/c": "/clean",
    "/v": "/versions"
  }
}
