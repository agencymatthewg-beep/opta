{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Opta",
  "version": "7.0.0",
  "identifier": "com.opta.optimizer",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "Opta",
        "width": 1400,
        "height": 900,
        "minWidth": 800,
        "minHeight": 600,
        "maxWidth": null,
        "maxHeight": null,
        "resizable": true,
        "maximizable": true,
        "fullscreen": false,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "transparent": true,
        "decorations": true,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "category": "DeveloperTool",
    "shortDescription": "AI-powered PC optimization for gaming performance",
    "longDescription": "Opta is an AI-powered optimization orchestrator that replaces fragmented optimization tools with ONE unified solution. It scans hardware, detects conflicts, and delivers measurable FPS gains through intelligent, context-aware settings optimization.",
    "externalBin": [
      "binaries/opta-mcp"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [],
    "copyright": "Â© 2026 Opta. All rights reserved.",
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    },
    "macOS": {
      "entitlements": "./entitlements.plist",
      "infoPlist": "./Info.plist",
      "exceptionDomain": "",
      "frameworks": [],
      "minimumSystemVersion": "12.0",
      "signingIdentity": "-",
      "providerShortName": null,
      "dmg": {
        "background": "./dmg/background.png",
        "appPosition": { "x": 180, "y": 170 },
        "applicationFolderPosition": { "x": 480, "y": 170 },
        "windowSize": { "width": 660, "height": 400 }
      }
    },
    "linux": {
      "appimage": {
        "bundleMediaFramework": false
      },
      "deb": {
        "depends": []
      }
    }
  }
}
