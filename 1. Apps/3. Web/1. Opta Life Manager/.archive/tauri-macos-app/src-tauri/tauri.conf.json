{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Opta Life Manager",
  "identifier": "com.opta.life-manager",
  "version": "1.0.0",
  "build": {
    "beforeBuildCommand": "",
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:3000",
    "frontendDist": "dist"
  },
  "app": {
    "windows": [
      {
        "title": "Opta Life Manager",
        "width": 1400,
        "height": 900,
        "minWidth": 1000,
        "minHeight": 700,
        "transparent": true,
        "decorations": true,
        "resizable": true,
        "center": true
      }
    ],
    "security": {
      "csp": "default-src 'self' http://127.0.0.1:* https://127.0.0.1:*; script-src 'self' 'unsafe-inline' 'unsafe-eval' http://127.0.0.1:*; style-src 'self' 'unsafe-inline' http://127.0.0.1:*; img-src 'self' data: blob: http://127.0.0.1:* https:; connect-src 'self' http://127.0.0.1:* https: wss:; font-src 'self' data:;"
    }
  },
  "bundle": {
    "active": true,
    "targets": ["dmg", "app"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns"
    ],
    "resources": [
      "resources/node",
      "resources/standalone"
    ],
    "macOS": {
      "minimumSystemVersion": "12.0",
      "entitlements": null,
      "signingIdentity": null
    }
  }
}
